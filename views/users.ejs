<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>
<body data-tailwind-scan>
    <div class="w-full h-screen bg-zinc-900 p-10 text-white">
        <div>
            <a href="/" class="text-blue-600 inline-block mb-5">Back To Home</a>
        </div>
        <h1 class="inline-block text-3xl mb-5">All Users</h1>
        <div class="flex gap-4 flex-wrap">
            <% if(users.length > 0) { %>
                <% users.forEach(function(user){ %>
                    <div class="bg-zinc-800 w-68 rounded p-4">
                        <div class="w-full h-45 bg-zinc-700 rounded-md bg-cover bg-center" style="background-image: url('<%= user.image %>')"></div>
                        <h2 class="text-xl font-semibold mt-3"><%= user.name %></h2>
                        <p class="text-sm text-zinc-400"><%= user.email %></p>
                        <div class="flex justify-between mt-2">
                            <a class="text-zinc-500" href="/edit/<%= user._id %>">Edit</a>
                            <a class="text-red-600" href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <h3 class="text-zinc-500">No users yet.</h3>
            <% } %>
        </div>
    </div>
</body>
</html>